<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/media_player"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="org.khacks.singandlearn.fragments.MediaPlayerFragment"
        tools:layout="@layout/media_player" />
    
    <fragment
        android:id="@+id/lyrics"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="org.khacks.singandlearn.fragments.LyricsFragment"
        />

    <fragment
        android:id="@+id/gaps"
        android:layout_weight="2"
        android:name="org.khacks.singandlearn.fragments.GapsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

</LinearLayout>